# PostgreSQL server info
DB_HOST=localhost          # your Postgres host (often localhost)
DB_PORT=5432               # Postgres port (default is 5432)
DB_USER=postgres           # Postgres username
DB_PASSWORD=yourpassword   # Postgres password
DB_NAME=mydb               # Name of your database

# Connection options
DB_SSLMODE=disable         # disable SSL for local dev, use 'require' in production
DB_TIMEZONE=Asia/Dhaka  # Timezone for timestamps
